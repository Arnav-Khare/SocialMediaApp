<html>
    <head>
       <%- include('../particles/head'); %>
       <!-- CSS file -->

        <link rel="stylesheet" type="text/css" href="CSS/userprofile.css">
        <link rel="stylesheet" type="text/css" href="/CSS/chat.css">

    </head>
    <body>    
      <header>
        <%- include('../particles/headeruser'); %>
      </header>
      <div class="container-fluid py-md-5 h-75">
            <div class="row col-5 justify-content-end px-5">
                <i class="fas fa-user-alt black"></i>
                <h2><%=username%></h2>
            </div>
            <div class=" col-5 center py-md-4 px-0 ">
              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link active"  href="/user">Posts:<%=posts.length%></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/user/followers">Followers:<%=followers.length%></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/user/following">Following:<%=following.length%></a>
                </li>
              </ul>
            </div>
            <div class="row col-5 center justify-content-end py-md-2 px-0 scroll">
              <%if(tablepost) { %>
                <% posts.forEach((item)=>{ %>
                              <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                                <div class="d-flex w-100 justify-content-between">
                                  <h5 class="mb-1"><%= item.title%></h5>
                                  <small>3 days ago</small>
                                </div>
                                <p class="mb-1"><%= item.body %></p>
                              </a>
                            <% }) %>
                 <%} %>
            
         
            </div>
      </div>
      <%- include('../particles/chat'); %>
      <footer>
        <p class="text-center"> SocialMediaApp</p>       </footer>
    </body>
</html>